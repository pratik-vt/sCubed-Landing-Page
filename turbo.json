{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "out/**", "dist/**", "build/**"],
      "env": [
        "NEXT_PUBLIC_*",
        "NODE_ENV",
        "DATABASE_URL",
        "STRAPI_*"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NEXT_PUBLIC_*",
        "NODE_ENV",
        "DATABASE_URL",
        "STRAPI_*",
        "PORT"
      ]
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true,
      "env": [
        "NEXT_PUBLIC_*",
        "NODE_ENV",
        "DATABASE_URL",
        "STRAPI_*",
        "PORT"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["$TURBO_DEFAULT$", ".eslintrc*", "eslint.config*"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "inputs": ["$TURBO_DEFAULT$", "tsconfig.json", "tsconfig*.json"]
    },
    "clean": {
      "cache": false
    }
  }
}